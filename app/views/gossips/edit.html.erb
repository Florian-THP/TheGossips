<h1>Editer le potin</h1>

<%= form_with(model: @gossip, local: true) do |form| %>
  <% if @gossip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gossip.errors.count, "erreur") %> empêchent la mise à jour du potin :</h2>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, value: @gossip.title %> <!-- Remplit le champ avec le titre actuel -->
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, value: @gossip.content %> <!-- Remplit le champ avec le contenu actuel -->
  </div>

  <div class="actions">
    <%= form.submit "Mettre à jour" %>
  </div>
<% end %>
